<?xml version='1.0' encoding='utf-8'?>
<widget id="br.com.cenp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>CENP Revista</name>
    <description>
        CENP - Revista
    </description>
    <author email="programador@clarearpropaganda.com.br" href="http://clarearpropaganda.com.br">
        Clarear Propaganda
    </author>
    
    <!-- Icons -->
    <icon src="icon.png" />
    <splash src="splash.png" />

        <!-- iPhone 6 / 6+ -->
        <icon src="res/icons/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

        <!-- iPhone / iPod Touch  -->
        <icon src="res/icons/ios/icon-60.png" platform="ios" width="60" height="60" />
        <icon src="res/icons/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

        <!-- iPad -->
        <icon src="res/icons/ios/icon-76.png" platform="ios" width="76" height="76" />
        <icon src="res/icons/ios/icon-76@2x.png" platform="ios" width="152" height="152" />

        <!-- Settings Icon -->
        <icon src="res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="res/icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />
        <icon src="res/icons/ios/icon-small@3x.png" platform="ios" width="87" height="87" />

        <!-- Spotlight Icon -->
        <icon src="res/icons/ios/icon-40.png" platform="ios" width="40" height="40" />
        <icon src="res/icons/ios/icon-40@2x.png" platform="ios" width="80" height="80" />
        <icon src="res/icons/ios/icon-40@3x.png" platform="ios" width="120" height="120" />


        <!-- Android -->
        <icon src="res/icons/android/icon-36-ldpi.png" platform="android" qualifier="ldpi" />
        <icon src="res/icons/android/icon-48-mdpi.png" platform="android" qualifier="mdpi" />
        <icon src="res/icons/android/icon-72-hdpi.png" platform="android" qualifier="hdpi" />
        <icon src="res/icons/android/icon-96-xhdpi.png" platform="android" qualifier="xhdpi" />
        <icon src="res/icons/android/icon-144-xxhdpi.png" platform="android" qualifier="xxhdpi" />
        <icon src="res/icons/android/icon-192-xxxhdpi.png" platform="android" qualifier="fr-xxhdpi" />



    <content src="index.html" />
    <preference name="android-minSdkVersion" value="14" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <gap:plugin name="pushbots-cordova-plugin" source="npm" spec="^1.4.0" />
    <preference name="phonegap-version" value="cli-6.3.0" />
    <preference name="android-build-tool" value="gradle" />
    <access origin="*" />
    <access origin="*.pushbots.com" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="ios" spec="~4.3.1" />
</widget>
